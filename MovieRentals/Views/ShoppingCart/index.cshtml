@model IEnumerable<MovieRentals.Models.ShoppingCart>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>My Shopping Cart</h2>
    <br />
    <table class="table">
        <tr>
            <th>
                Movie Title
            </th>
            <th>
                Price
            </th>
        </tr>
    
    @foreach (var item in (IEnumerable<MovieRentals.Models.Movie>)ViewData["Cart"]) {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Cost
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
        <tr>
            <th>Cart Total</th>
            <td>
            </td>
        </tr>
    
    </table>
</body>
</html>
